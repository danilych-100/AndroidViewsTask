<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.viewstask.CustomViewGroup
            android:id="@+id/firstCustomGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cvg_rowDistance="15dp"
            app:cvg_childDistance="25dp"
            app:cvg_childHeight="30dp"
            app:cvg_gravity="right"/>

        <View style="@style/Divider"/>

        <com.example.viewstask.CustomViewGroup
            android:id="@+id/secondCustomGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cvg_rowDistance="20dp"
            app:cvg_childDistance="40dp"
            app:cvg_childHeight="30dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>